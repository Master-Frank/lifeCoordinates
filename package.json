{
  "name": "life-coordinates",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "eslint": "^9.17.0",
    "globals": "^15.14.0",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.19.0"
  },
  "scripts": {
    "build": "npm run build:tarot && npm run build --workspaces --if-present",
    "build:tarot": "npm --prefix mystic-hand-tarot run build",
    "lint": "npm run lint --workspaces --if-present",
    "typecheck": "npm run typecheck --workspaces --if-present"
  }
}
